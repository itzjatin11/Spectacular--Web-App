@model List<SpecTacular.Models.Promotion>

@{
    ViewData["Title"] = "Exclusive Promotions";
}

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background: linear-gradient(135deg, #f5f5f5, #e0e0e0);
        color: #333;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 50px 20px;
    }

    .promotion-header {
        text-align: center;
        margin-bottom: 40px;
        color: #222;
    }

        .promotion-header h1 {
            font-size: 40px;
            font-weight: 700;
            color: #28a745;
            letter-spacing: 1px;
            text-transform: uppercase;
            margin-bottom: 20px;
        }

        .promotion-header p {
            font-size: 18px;
            font-weight: 400;
            color: #666;
            margin-bottom: 30px;
        }

    .promotion-card {
        background: #ffffff;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        border-radius: 12px;
        padding: 30px;
        margin-bottom: 35px;
        transition: all 0.3s ease-in-out;
    }

        .promotion-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
        }

        .promotion-card h3 {
            font-size: 28px;
            color: #28a745;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .promotion-card p {
            font-size: 16px;
            color: #555;
            line-height: 1.8;
            margin-bottom: 20px;
        }

        .promotion-card .discount {
            font-size: 26px;
            font-weight: 700;
            color: #ff5733;
            margin-top: 15px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .promotion-card .validity {
            font-size: 14px;
            color: #777;
            margin-top: 20px;
            font-style: italic;
        }
</style>

<div class="container">
    <div class="promotion-header">
        <h1>Exclusive Promotions Just for You!</h1>
        <p>Grab these limited-time offers and save big on your next eyewear purchase. Don't miss out!</p>
    </div>

    @if (Model != null && Model.Any())
    {
        foreach (var promo in Model)
        {
            <div class="promotion-card">
                <h3>@promo.Title</h3>
                <p>@promo.Description</p>
                <div class="discount">Save @promo.DiscountPercentage%</div>
                <div class="validity">
                    @(promo.ValidUntil != null
                        ? $"Offer valid until {promo.ValidUntil.Value.ToString("d MMM yyyy")}"
                        : "Limited time offer.") Terms and conditions apply.
                </div>
            </div>
        }
    }
    else
    {
        <p class="text-center">No promotions available at this time.</p>
    }
</div>