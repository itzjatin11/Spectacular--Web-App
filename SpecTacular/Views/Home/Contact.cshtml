@{
    ViewBag.Title = "Contact Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- External CSS -->
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Framer Motion (for animations if needed) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/framer-motion/10.12.7/framer-motion.umd.min.js" defer></script>
</head>
<body class="bg-gray-100">
    <div class="min-h-screen flex items-center justify-center">
        <div class="bg-white p-8 rounded-2xl shadow-lg w-full max-w-lg fade-in">
            <h2 class="text-2xl font-bold text-center text-gray-800 mb-4">Contact Us</h2>
            <p class="text-gray-600 text-center mb-6">We'd love to hear from you! Fill in the form below.</p>

            <!-- Success/Error Message -->
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="p-4 mb-4 text-white text-center rounded-lg bg-red-500">
                    @ViewBag.ErrorMessage
                </div>
            }
            else if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="p-4 mb-4 text-white text-center rounded-lg bg-green-500">
                    @ViewBag.Message
                </div>
            }

            <!-- Contact Form -->
            <form class="space-y-4" method="post" action="/Home/Contact">
                <div>
                    <label class="block text-gray-700">Name</label>
                    <input type="text" name="Name" required class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-400">
                </div>
                <div>
                    <label class="block text-gray-700">Email</label>
                    <input type="email" name="Email" required class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-400">
                </div>
                <div>
                    <label class="block text-gray-700">Message</label>
                    <textarea name="Message" required class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-400" rows="4"></textarea>
                </div>
                <button type="submit" class="w-full bg-blue-500 text-white p-2 rounded-lg hover:bg-blue-600 transition transform hover:scale-105">
                    Send Message
                </button>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const form = document.querySelector("form");
            form.addEventListener("submit", function(event) {
                let email = document.querySelector("input[name='Email']").value.trim();
                if (email === "") {
                    event.preventDefault();
                    alert("Email is required.");
                }
            });
        });
    </script>
</body>
</html>
